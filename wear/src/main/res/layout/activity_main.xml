<android.support.wearable.view.BoxInsetLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="#474b4e"
    android:layout_height="match_parent"
    android:layout_width="match_parent"
    android:padding="5dp">

    <RelativeLayout
        android:id="@+id/mainRelativeLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="5dp"
        app:layout_box="all"
        android:rowCount="6"
        android:columnCount="2">

        <TextView
            android:id="@+id/fromText"
            android:gravity="center"
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:textColor="@color/white"
            android:textStyle="bold"
            android:theme="@style/TextView.Large"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:layout_row="0"
            android:layout_column="0"
            android:layout_alignParentLeft="false"
            android:layout_marginLeft="0dp" />

        <TextView
            android:id="@+id/destinationText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:textSize="18sp"
            android:layout_marginLeft="40dp"
            android:fontFamily="sans-serif-thin"
            android:layout_alignTop="@+id/lineIconTop"
            android:textColor="@color/white"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/timeToDepartureText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:textSize="18sp"
            android:layout_marginLeft="40dp"
            android:fontFamily="sans-serif-thin"
            android:layout_below="@+id/lineIconTop"
            android:layout_alignParentStart="true"
            android:textColor="@color/white"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/platformMessage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:textSize="14sp"
            android:layout_marginLeft="40dp"
            android:fontFamily="sans-serif-thin"
            android:layout_below="@+id/timeToDepartureText"
            android:layout_alignParentStart="true"
            android:textColor="@color/white"
            android:textStyle="bold" />
        <!--
        <TextView
            android:id="@+id/lineIconTop"
            android:textColor="@color/white"
            android:background="@null"
            android:layout_height="25dp"
            android:layout_width="30dp"
            android:src="@drawable/t10_small"
            android:layout_row="1"
            android:layout_column="0"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="0dp"
            android:layout_alignParentTop="true"
            android:layout_marginTop="40dp" />
        -->
        <TextView
            android:id="@+id/lineNumber"
            android:textColor="@color/white"
            android:background="@null"
            android:layout_height="25dp"
            android:layout_width="30dp"
            android:src="@drawable/t10_small"
            android:layout_row="3"
            android:layout_column="0"
            android:layout_marginLeft="0dp"
            android:layout_alignParentBottom="true"
            android:layout_alignParentStart="true"
            android:layout_marginBottom="50dp" />

        <ImageButton
            android:id="@+id/settingsButton"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_alignParentBottom="true"
            android:layout_alignParentEnd="true"
            android:src="@drawable/refresh"
            android:layout_marginRight="10dp"
            android:clickable="true"
            android:background="#474b4e" />

        <ImageButton
            android:id="@+id/favoritesButton"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@drawable/star"
            android:layout_marginLeft="10dp"
            android:clickable="true"
            android:background="#474b4e"
            android:layout_alignParentBottom="true"
            android:layout_alignParentStart="true" />

    </RelativeLayout>
</android.support.wearable.view.BoxInsetLayout>